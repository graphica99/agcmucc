<%- include('../userDashboardIncludes/header') %>
<%- include('../userDashboardIncludes/sideBar') %>
<%- include('../userDashboardIncludes/nav') %>

<!-- Content Wrapper -->

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content">
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- 404 Error Text -->
            <div class="">
                <div class="section-top-border">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                            <% success.forEach(function(message){ %>
                            <div class="alert alert-success text-center"><%= message %></div>
                            <% }) %>
                            <h3 class="mb-30 title_color text-center">Add Post</h3>
                            <form action="/addPost" method="POST" enctype="multipart/form-data">
                                <div class="mt-10">
                                    <input class="form-control" type="text" name="title" placeholder="title"
                                        onfocus="this.placeholder = ''" onblur="this.placeholder = 'title'" required
                                        class="single-input">
                                </div>
                                <div class="input-group-icon mt-10" class="">
                                  
                                    <div class="form-select" id="default-select2">

                                        <select name="category" class="form-control">
                                            <%cat.forEach(function(category){%>
                                            <option value="<%=category.postCategory%>"><%=category.postCategory%></option>
                                            <%})%>
                                        </select>

                                    </div>
                                </div>
                                <div class="mt-10">
                                    <input type="hidden" name="userId" value="<%=user.id%>">
                                    <input class="form-control" type="text" name="arthur" placeholder="Arthur"
                                        onfocus="this.placeholder = ''" onblur="this.placeholder = 'Arthur'" required
                                        class="single-input" value="<%=user.lastName%> <%=user.firstName%>">
                                </div>
                                <div class="mt-10">
                                    <label for="demo">Select an imiage for the post(Note: the image should relate to post):</label>
                                    <input class="form-control" type="file" name="file" required>
                                </div>
                                <div class="mt-10">
                                    <textarea id='edit' class="form-control mb-10" rows="5" name="details" placeholder="details"
                                        onfocus="this.placeholder = ''" onblur="this.placeholder = 'details'"
                                        required=""></textarea>
                                </div>
                           
                                <div class="button-group-area mt-40 text-center">
                                    <button type="submit" class="genric-btn primary circle">Add Post</button>
                                    <a href="viewAllPost" class="genric-btn danger circle">View all your posts</a>
                                </div>
                            </form>
                        </div> 
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

    <%- include('../userDashboardIncludes/footer') %>