
<section class="event_date_area">
    <div class="container">
        <div class="row">
            <div class="col-md-6 d_flex">
                <div class="evet_location flex">
                    <h3><%=data.title%></h3>
                   
                    <p><span class="lnr lnr-calendar-full"></span><%=data.date%></p>
                    <p><span class="lnr lnr-clock"></span><%=data.time%> to <%=data.time_end%></p>
                </div>
            </div>
            <div class="col-md-6 event_time">
                <h4>Our Next Event Starts in</h4>
                <div id="timer" class="timer">
                    <!-- <div class="timer__section days"> -->
                    <p id="demo" class="timers"></p>
                    
                    <!-- </div> -->
                    <div class="timer__section days">
                        <div id="timer__day" class="timers"></div>
                        <div class="timer__label" id="day">days</div>
                    </div>
                    <div class="timer__section hours">
                        <div id="timer__hour" class="timers"></div>
                        <div class="timer__label" id="hour">hours</div>
                    </div>
                    <div class="timer__section minutes">
                        <div id="timer__minute" class="timers"></div>
                        <div class="timer__label" id="minute">Minutes</div>
                    </div>
                    <div class="timer__section seconds">
                        <div id="timer__seconds" class="timers"></div>
                        <div class="timer__label" id="seconds">seconds</div>
                    </div>
                </div>
                
            </div>
        </div>
    </div>
</section>
<style>
    .timers {
        font: 600 36px/45px "Poppins", sans-serif;
    }
    #demo {
        color: tomato;
    }
</style>
<script>
    // Set the date we're counting down to
    
    // var countDownDate = new Date("June 20, 2020 11:40:00").getTime();
    // var countDownDate = new Date("2020-06-20 , 17:55:00").getTime();
    var countDownDate = new Date("<%=data.date%> , <%=data.time%>:00").getTime();
    //  console.log('<%=data.date%> , <%=data.time%>:00');
    //  console.log('<%=data.time%>');

    // Update the count down every 1 second
    var x = setInterval(function () {

        // Get today's date and time
        var now = new Date().getTime();

        // Find the distance between now and the count down date
        var distance = countDownDate - now;

        // Time calculations for days, hours, minutes and seconds
        var days = Math.floor(distance / (1000 * 60 * 60 * 24));
        var hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
        var minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
        var seconds = Math.floor((distance % (1000 * 60)) / 1000);

        // Output the result in an element with id="demo"
        var documentDay = document.getElementById('timer__day').innerHTML = days;
        var documentHour = document.getElementById('timer__hour').innerHTML = hours;
        var documentMinute = document.getElementById('timer__minute').innerHTML =minutes;
        var documentSecond = document.getElementById('timer__seconds').innerHTML = seconds;

        //   document.getElementById("demo").innerHTML = days + "d " + hours + "h "
        //   + minutes + "m " + seconds + "s ";

        // If the count down is over, write some text 
        if (distance < 0) {
            clearInterval(x);
            document.getElementById("demo").innerHTML = "ONGOING";

            var ids = ['timer__day', 'timer__hour', 'timer__minute', 'timer__seconds'];
            var days = ['day', 'hour', 'minute', 'seconds'];

            for (i = 0; i < 4; i++) {
               documentDay = document.getElementById(ids[i]).style.display = 'none';
                documentDay = document.getElementById(days[i]).style.display = 'none';
            }
        }
    }, 1000);
</script>