<%- include('../../admin-include/header') %>
<%- include('../../admin-include/sideBar') %>
<%- include('../../admin-include/nav') %>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Messages sents by Users</h1>
    <p class="mb-4">This table displays all the messages from the contact section</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">

            <% success.forEach(function(message){ %>
            <div class="alert alert-success text-center"><%= message %></div>
            <% }) %>

            <% info.forEach(function(info){ %>
            <div class="alert alert-danger text-center"><%= info %></div>
            <% }) %>

            <h6 class="m-0 font-weight-bold text-primary">User's Table</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Subject</th>
                            <th>message</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Subject</th>
                            <th>message</th>
                            <th>Edit</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <% message.forEach(function(message){%>
                        <tr>
                            <td><%=message.name%></td>
                            <td><%=message.email%></td>
                            <td><%=message.subject%></td>
                            <td><%=message.message%></td>
                            <td><a class="btn btn-danger" href="/admin/deleteContact/<%=message._id%>">
                                Delete 
                             </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
</div>
<%- include('../../admin-include/footer') %>