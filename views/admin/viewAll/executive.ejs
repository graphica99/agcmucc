<%- include('../../admin-include/header') %>
<%- include('../../admin-include/sideBar') %>
<%- include('../../admin-include/nav') %>

<!-- Begin Page Content -->
<div class="container-fluid">

    <!-- Page Heading -->
    <h1 class="h3 mb-2 text-gray-800">Executive</h1>
    <p class="mb-4">This table displays all the Executives in AGCM</p>

    <!-- DataTales Example -->
    <div class="card shadow mb-4">
        <div class="card-header py-3">

            <% success.forEach(function(message){ %>
            <div class="alert alert-success text-center"><%= message %></div>
            <% }) %>

            <% info.forEach(function(info){ %>
            <div class="alert alert-danger text-center"><%= info %></div>
            <% }) %>

            <h6 class="m-0 font-weight-bold text-primary">Sermon's Table</h6>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Portfolio</th>
                            <th>Contact</th>
                            <th>Year Group</th>
                            <th>Image</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </thead>
                    <tfoot>
                        <tr>
                            <th>Name</th>
                            <th>Portfolio</th>
                            <th>Contact</th>
                            <th>Year Group</th>
                            <th>Image</th>
                            <th>Edit</th>
                            <th>Delete</th>
                        </tr>
                    </tfoot>
                    <tbody>
                        <% Executive.forEach(function(Executive){    
                        %>
                        <tr>
                            <td><%=Executive.name%></td>
                            <td><%=Executive.portfolio%></td>
                            <td><%=Executive.contact%></td>
                            <td><%=Executive.yearGroup%></td>
                            <td><img width="120px" height="90px" src="/executiveUploads/<%=Executive.image%>" alt="<%=Executive.title%>">
                            <td><a href="/admin/editExecutive/<%=Executive.id%>" class="btn btn-primary">Edit</a></td>
                            <td>

                                <a class="btn btn-danger" href="/admin/deleteExecutive/<%=Executive.id%>">
                                    Delete
                                </a>
                            </td>
                        </tr>
                        <% }) %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<!-- /.container-fluid -->
</div>
<!-- End of Main Content -->
