<%- include('../../admin-include/header') %>
<%- include('../../admin-include/sideBar') %>
<%- include('../../admin-include/nav') %>

<!-- Content Wrapper -->

<!-- Content Wrapper -->
<div id="content-wrapper" class="d-flex flex-column">

    <!-- Main Content -->
    <div id="content"> 
        <!-- Begin Page Content -->
        <div class="container-fluid">

            <!-- 404 Error Text -->
            <div class="text-center">
                <div class="section-top-border">
                    <div class="row">
                        <div class="col-lg-12 col-md-12">
                        
                          <h3 class="mb-30 title_color">Edit Department</h3>
                            <form action="/admin/editDepartment/<%= data.id%>" method="post" enctype="multipart/form-data">
                                <div class="mt-10">
                                    <input  class="form-control" type="text" name="name" placeholder="name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'name'" required class="single-input" value="<%= data.name%>">
                                </div>
                                <div class="mt-10">
                                    <input class="form-control" type="text" name="department" placeholder="Department head" onfocus="this.placeholder = ''" onblur="this.placeholder = 'dept_head'" required class="single-input"value="<%= data.department%>">
                                </div>
                                <div class="mt-10">
                                    <textarea class="form-control mb-10" rows="5" name="details" placeholder="Mission/vision of the department" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Mission/vision of the department'" required=""><%= data.details%></textarea>
                                </div>
                                <div class="mt-10">
                                    <input  class="form-control" type="file" name="file" placeholder="Insert an Image related to the sermon" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Insert an Image related to the sermon'" required class="single-input">
                                </div>
                                <div class="button-group-area mt-40">
                                    <button type="submit" class="genric-btn primary circle">Edit Department</button>
                                    <a href="/admin/viewAllDepartment" class="genric-btn danger circle">Cancle</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- End of Main Content -->

