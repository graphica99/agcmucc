                        <li><i class="lnr lnr-user"></i><%=sermon.Name%></li>
                        <li><i class="lnr lnr-calendar-full"></i><%=sermon.date%></li>
                    </ul>
                    <a href="/sermon-details/<%=sermon._id%>" class="btn_hover">View Details</a>
                </div>
            </div>
