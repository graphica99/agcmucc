<%- include('../includes/header') %>
<%- include('../includes/nav') %>
<section class="breadcrumb_area br_image">
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Sermons</h2>
            <ol class="breadcrumb">
                <li><a href="index.html">Home</a></li>
                <li class="active">Sermons</li>
            </ol>
        </div>
    </div> 
</section>
<!--================Breadcrumb Area =================-->

<!--================Sermons work Area =================-->
<section class="sermons_work_area section_gap">
    <div class="container">
        <div class="section_title text-center">
            <h2>Sermons This Week</h2>
            <p>Assemblies of God Campus ministry, University of Cape coast</p>
        </div>
        <div class="sermons_slider owl-carousel">
            <div class="item row">
                <div class="col-lg-8">
                    <div class="sermons_image">
                        <img src="/sermonUploads/<%=sermonOfTheWeek.imagename%>" alt="">
                        <p><%=sermonOfTheWeek.message%></p>
                    </div>
                </div>
                <div class="col-lg-4">
                    <div class="sermons_content">
                        <h3 class="title_color"><%=sermonOfTheWeek.title%></h3>
                        <ul class="list_style sermons_category">
                            <li><i class="lnr lnr-user"></i><span>Speaker: </span><%=sermonOfTheWeek.Name%></li>
                            <li><i class="lnr lnr-calendar-full"></i><span>Date:</span><%=sermonOfTheWeek.date%></li>
                            
                        </ul>
                        <a href="/sermon-details/<%=sermonOfTheWeek._id%>" class="btn_hover">View Details</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================Sermons work Area=================-->

