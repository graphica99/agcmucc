<%- include('../includes/header') %>
<%- include('../includes/nav') %>
<section class="breadcrumb_area br_image">
    <div class="container">
        <div class="page-cover text-center">
            <h2 class="page-cover-tittle">Contact Us</h2>
            <ol class="breadcrumb">
                
                <li class="active">Contact Agcm ucc</li>
            </ol>
        </div>
    </div>
</section>
<section class="event_blog_area section_gap">
    <div class="container">
             <% success.forEach(function(message){ %>
            <div class="alert alert-success text-center"><%= message %></div>
            <% }) %>
            <% error.forEach(function(message){ %>
                <div class="alert alert-danger text-center"><%= message %></div>
            <% }) %>
        <div class="row">
            <div class="col-md-3">
                <div class="contact_info">
                    <div class="info_item">
                        <i class="lnr lnr-home"></i>
                        <h6>AGCM, Ghana</h6>
                        <p>University of Cape Coast</p>
                    </div>
                    <div class="info_item">
                        <i class="lnr lnr-phone-handset"></i>
                        <h6><a href="#">024*******</a></h6>
                        <p>Call us on this number</p>
                    </div>
                    <div class="info_item">
                        <i class="lnr lnr-envelope"></i>
                        <h6><a href="#">uccagcm@gmail.com</a></h6>
                        <p>Send us emails anytime!</p>
                    </div>
                </div>
            </div>
            <div class="col-md-9">

                <form class="row contact_form" action="/contact" method="post" id="contactForm">
                    <div class="col-md-6">
                        <div class="form-group">
                            <input type="text" class="form-control" id="name" name="name" placeholder="Enter your name" required>
                        </div>
                        <div class="form-group">
                            <input type="email" class="form-control" id="email" name="email"
                                placeholder="Enter email address" required>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" id="subject" name="subject"
                                placeholder="Enter Subject" required>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <textarea class="form-control" name="message" id="message" rows="1"
                                placeholder="Enter Message" required></textarea>
                        </div>
                    </div>
                    <div class="col-md-12 text-right">
                        <button type="submit" value="submit" class="btn btn_hover btn_hover_two">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

<%- include('../includes/footer') %>