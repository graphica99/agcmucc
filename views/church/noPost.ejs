<%- include('../includes/header') %>
<%- include('../includes/nav') %>

<!--================Blog Area =================-->
<section class="blog_area">
    <div class="container">
        <div class="row">
            <div class="col-lg-8">
                <div class="blog_left_sidebar">
                    <div class="text-center">
                        <div class="error mx-auto" data-text="No Post">No Post</div>
                        <p class="lead text-gray-800 mb-5">No post on this category yet</p>
                        <%if(user){%>
                        <p class="text-gray-500 mb-0">You can be the first to create a post in this category.</p>
                        <a href="/viewAddPost" class="btn btn-primary">Create Now</a> <br>
                        <%}else{%>
                        <p class="text-gray-500 mb-0">You can be the first to create a post on this category. By signing up</p>
                        <a href="/signUp" class="btn btn-primary">Sign Up</a> <br>
                        <%}%>
                        <a href="/blog">&larr; Back to Blog</a>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="blog_right_sidebar">
                    <aside class="single_sidebar_widget search_widget">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search Posts">
                            <span class="input-group-btn">
                                <button class="btn btn-default" type="button"><i class="lnr lnr-magnifier"></i></button>
                            </span>
                        </div><!-- /input-group -->
                        <div class="br"></div>
                    </aside>
                   
                    <aside class="single_sidebar_widget popular_post_widget">
                        <h3 class="widget_title">Popular Posts</h3>
                      <%popularPost.forEach(function(popularPost){%>
                        <div class="media post_item">
                            <img width="130px" height="70px" src="/postUploads/<%=popularPost.image%>" alt="post">
                            <div class="media-body">
                                <a href="/blog-details/<%=popularPost._id%>"><h3><%=popularPost.title%></h3></a>
                                <p><%=timeAgo.format(popularPost.date)%></p>
                            </div>
                        </div> 
                       <%})%>
                        <div class="br"></div>
                    </aside>
                    <aside class="single_sidebar_widget ads_widget">
                        <a href="#"><img class="img-fluid" src="image/blog/add.jpg" alt=""></a>
                        <div class="br"></div>
                    </aside>
                    <aside class="single_sidebar_widget post_category_widget">
                        <h4 class="widget_title">Post Catgories</h4>
                        <ul class="list_style cat-list">
                          <%allCat.forEach(function(allCat){%>
                            <li>
                                <a href="/viewBlogByCategory/<%=allCat.postCategory%>/<%=allCat._id%>" class="d-flex justify-content-between">
                                    <p><%=allCat.postCategory%></p>
                                </a>
                            </li>
                            <%})%>												
                        </ul>
                        <div class="br"></div>
                    </aside>
                    <aside class="single-sidebar-widget tag_cloud_widget">
                        <h4 class="widget_title">Tag Categories</h4>
                        <ul class="list_style">
                            <%allCat.forEach(function(allCat){%>
                                <li><a href="/viewBlogByCategory/<%=allCat.postCategory%>/<%=allCat._id%>"><%=allCat.postCategory%></a></li>
                                <%})%>		 
                        </ul>
                    </aside>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================Blog Area =================-->

<%- include('../includes/footer') %>